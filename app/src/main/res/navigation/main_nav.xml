<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/config_nav"
    app:startDestination="@id/calendarFragment">

    <fragment
        android:id="@+id/configFragment"
        android:name="com.example.tutorialapplication.fragment.ConfigFragment"
        android:label="fragment_config"
        tools:layout="@layout/fragment_config" />

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.example.tutorialapplication.fragment.CalendarFragment"
        android:label="CalendarFragment" >
        <action
            android:id="@+id/action_calendarFragment_to_diaryFragment"
            app:destination="@id/diaryFragment"
            >
        </action>
    </fragment>

    <fragment
        android:id="@+id/diaryFragment"
        android:name="com.example.tutorialapplication.fragment.DiaryFragment"
        android:label="fragment_diary"
        tools:layout="@layout/fragment_diary" >
        <argument
            android:name="information"
            app:argType="string"
            android:defaultValue="Test" />
    </fragment>
</navigation>